<settings-container child-control-width='true' child-expand-width='true' size-delta-y='0'>
	<horizontal preferred-width="80" child-control-width="true" />
	<horizontal>
		<button text='Open Score Settings' on-click='score_button_clicked' hover-hint='Change what score info you see on the results table'></button>
		<button text='Open Nickname Editor' on-click='nick_button_clicked' hover-hint='Edit existing nicknames or add new ones for players currently in the lobby'></button>
	</horizontal>
	<checkbox-setting text='Enable Nicknames' value='EnableNicknames' apply-on-change='true' hover-hint='Toggles nickname functionality'/>
</settings-container>